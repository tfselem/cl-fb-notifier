{
    "name": "Craigslist & Facebook Marketplace Notifier",
    "version": "0",
    "description": "Updates you on Craigslist and FB Marketplace searches.",
    "background": {
        "scripts": [
            "scripts/tools/date-parser.js",
            "scripts/backgroundInstall.js",
            "scripts/backgroundInterval.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "layout/popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*.craigslist.org/*",
                "https://*.craigslist.org/*"
            ],
            "js": [
                "scripts/content/valid-dom.js"
            ]
        }
    ],
    "permissions": [
        "tabs",
        "storage",
        "http://*.craigslist.org/",
        "https://*.craigslist.org/"
    ],
    "manifest_version": 2
}

